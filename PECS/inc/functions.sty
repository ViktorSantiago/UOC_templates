%	ENUNCIADO SIN APARTADO
\newcommand{\enu}[2]{
	\raggedright{{\rmfamily \textsc{\pregunta{} \textcolor{numero}{#1}}} \vspace{1mm}} 
	\colorbox{morado}{\parbox[l]{ 0.99\textwidth }{\textcolor{white}{#2}}}
}
%	FIN DE ENUNCIADO SIN APARTADO

%	ENUNCIADO CON APARTADO 
\newcommand{\enunciado}[3]{
	\raggedright{{\rmfamily \textsc{\pregunta{} \textcolor{numero}{#1} \subpregunta{} \textcolor{numero}{#2}
		\vspace{1mm}}}}
		\colorbox{morado}{\parbox[l]{0.99\textwidth}{#3}}
}
%	FIN DE ENUNCIADO CON APARTADO

